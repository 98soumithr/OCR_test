{
  "name": "formpilot",
  "version": "1.0.0",
  "private": true,
  "description": "FormPilot - PDF extraction and web form autofilling",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:extension\"",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:extension": "cd extension && npm run dev",
    "build": "npm run build:extension",
    "build:extension": "cd extension && npm run build",
    "test": "npm run test:backend && npm run test:extension",
    "test:backend": "cd backend && pytest",
    "test:extension": "cd extension && npm test",
    "lint": "npm run lint:backend && npm run lint:extension",
    "lint:backend": "cd backend && ruff check .",
    "lint:extension": "cd extension && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}