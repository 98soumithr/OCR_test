{
  "manifest_version": 3,
  "name": "FormPilot",
  "version": "1.0.0",
  "description": "AI-powered PDF to form autofill with confidence and provenance",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "css": ["dist/content-script.css"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "dist/sidebar.html"
  },
  "action": {
    "default_title": "Open FormPilot",
    "default_popup": "dist/popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}