{
  "name": "formpilot",
  "version": "1.0.0",
  "description": "FormPilot: PDF-to-form autofill Chrome extension with local Python service",
  "private": true,
  "workspaces": [
    "extension",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run extension:dev\"",
    "backend:dev": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "extension:dev": "cd extension && npm run dev",
    "build": "npm run shared:build && npm run backend:build && npm run extension:build",
    "shared:build": "cd shared && npm run build",
    "backend:build": "cd backend && echo 'Backend build complete'",
    "extension:build": "cd extension && npm run build",
    "test": "npm run backend:test && npm run extension:test",
    "backend:test": "cd backend && python -m pytest",
    "extension:test": "cd extension && npm run test",
    "e2e": "cd extension && npm run e2e",
    "install:all": "npm install && npm run shared:install && npm run backend:install && npm run extension:install",
    "shared:install": "cd shared && npm install",
    "backend:install": "cd backend && pip install -r requirements.txt",
    "extension:install": "cd extension && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  }
}